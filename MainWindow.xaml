        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Ventas" Height="450" Width="734">
    <Grid>
        <Menu>
            <MenuItem Header="Almacen">
                <MenuItem Header="Categoria" Click="CategoriaClick"/>
                <MenuItem Header="Almacen" Click="AlmacenClick"/>
            </MenuItem>
            <MenuItem Header="Productos">
                <MenuItem Header="Producto" Click="ProductoClick"/>
            </MenuItem>
            <MenuItem Header="Proveedor">
                <MenuItem Header="Proveedor" Click="ProveedorClick"/>
            </MenuItem>
            <MenuItem Header="Cliente">
                <MenuItem Header="Clientes" Click="ClientesClick"/>
            </MenuItem>
            <MenuItem Header="Ventas">
                <MenuItem Header="Realizar Venta" Click="VentaClick"/>
            </MenuItem>
        </Menu>
        <Grid>
            <Button Content="Button" HorizontalAlignment="Left" Height="87" Margin="198,143,0,0" VerticalAlignment="Top" Width="87"  Visibility="Hidden"/>
